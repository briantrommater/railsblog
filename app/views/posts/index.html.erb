<main id='posts-index'>
  <% @posts.reverse.each do |post| %>
      
      <div class='postBox'>
      <%= link_to(post.body, post) %> <br/>
        Post created by: <%= post.user.name %><br/>
      </div>
  <% end %>



  <p>
    <%= link_to('Create Post', new_post_path)%>
  </p>

  <% if session[:user_id] %>
     hi you are logged in!
    <%= link_to 'Signout', destroy_session_path%>
  <% else %>
    <%= link_to 'Signin', new_session_path %>
  <% end %>

</main>
