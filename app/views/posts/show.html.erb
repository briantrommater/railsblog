
<%= @post.body %>

<%= link_to("Edit Post", edit_post_path(@post)) %><br>
<%= link_to("Delete Post", @post, method: 'delete') %><br>
<%= link_to("Add Comment", new_comment_path(post_id: @post.id)) %>

<h3><% @post.comments.reverse.each do |f| %> </h3> 
            <div id="single-comment">
                <h4>Comment</h4>
                <h5>From - <%= f.user.name %></h5>

                <h6><%= f.body %> </h6>

                <br>

                <% # if session[:user_id] == f.user_id %>
                <%= link_to("Edit Comment", edit_comment_path(f.id)) %>
                <br>
                <%= link_to("Delete Comment", comment_path(f.id), method: :delete) %>
                <% # end %>
            </div>
        <% end %>

